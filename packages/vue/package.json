{
  "name": "@streaming-markdown/vue",
  "version": "0.1.0",
  "description": "Vue 3 components for streaming markdown renderer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles.css"
    }
  },
  "scripts": {
    "build": "vite build && vue-tsc -p tsconfig.json --emitDeclarationOnly && cp src/styles.css dist/styles.css",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markdown",
    "vue",
    "streaming",
    "ai",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "vue": ">=3.3.0"
  },
  "dependencies": {
    "@streaming-markdown/core": "file:../core"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^24.0.0",
    "happy-dom": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
