{
  "name": "@streaming-markdown/react",
  "version": "0.1.0",
  "description": "React components for streaming markdown renderer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
